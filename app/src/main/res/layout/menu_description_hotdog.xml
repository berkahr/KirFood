<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuDescriptionHotdog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescriptionHotdog"
    android:background="@drawable/menu_description"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imgDesHotdog"
        android:layout_width="196dp"
        android:layout_height="198dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/hotdog"/>
    <TextView
        android:id="@+id/nameDesHotdog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="menu"
        android:textSize="26dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/DesHotdog"
        android:layout_width="320dp"
        android:layout_height="222dp"
        android:layout_marginLeft="48dp"
        android:justificationMode="inter_word"
        android:scrollbars="vertical"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="10dp"
        android:weightSum="5">
        <TextView
            android:id="@+id/priceDesHotdog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="price"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/ShareDesHotdog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:drawableLeft="@drawable/share"
            android:background="@drawable/button"
            android:text="share"
            android:textColor="@color/black"
            android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="10dp"
        android:weightSum="5">
        <Button
            android:id="@+id/AddDesHotdog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Add to cart"
            android:background="@drawable/button"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/FavoriteDesHotdog"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Favorite"
            android:background="@drawable/button"
            android:textColor="@color/black"
            android:textSize="16dp"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/payment"
    android:orientation="vertical"
    tools:context=".Payment">

    <TextView
        android:id="@+id/header1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Payment Methods"
        android:drawableLeft="@drawable/arrow_back"
        android:textSize="30dp"
        android:paddingTop="5dp"
        android:gravity="left"
        android:background="@drawable/top_bar_page"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:text="Choose Payment Method"
            android:textColor="@color/kirby_elcate_color"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/debit"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="left"
            android:background="@drawable/shadow2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Debit/Credit Card"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="tes"
                android:src="@drawable/crd" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/mbanking"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="left"
            android:background="@drawable/shadow2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Mobile Banking"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="tes"
                android:src="@drawable/op" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/cash"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="left"
            android:background="@drawable/shadow2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Cash"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="tes"
                android:src="@drawable/uang" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/dana"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="left"
            android:background="@drawable/shadow2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="DANA"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="tes"
                android:src="@drawable/vector" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ovo"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="left"
            android:background="@drawable/shadow2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="OVO"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitCenter"
                android:contentDescription="tes"
                android:src="@drawable/vector1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home"
    android:background="@drawable/home_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Pilihan"
        android:orientation="horizontal"
        android:weightSum="4"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="130dp">
        <LinearLayout
            android:id="@+id/pilBurger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginRight="5dp">
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/burger"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="Burger"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Burger"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pilPizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginRight="5dp">
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/pizza"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="Pizza"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pilHotdog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginRight="5dp">
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/hotdog"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="Hotdog"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotdog"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pilDrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/white">
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:src="@drawable/drink"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:contentDescription="Drink"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drink"
                android:layout_gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
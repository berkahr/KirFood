<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuDescription"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescriptionDrink">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="568dp"
        android:id="@+id/description"
        android:background="@drawable/menu_description"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/imgDrinkMenu"
            android:layout_width="wrap_content"
            android:layout_height="152dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="122dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="394dp"
            android:src="@drawable/icon"/>
        <TextView
            android:id="@+id/menuDesName"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="187dp"
            android:layout_marginEnd="67dp"
            android:layout_marginBottom="349dp"
            android:gravity="center"
            android:text="Menu Name"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/menuDes"
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="43dp"
            android:layout_marginTop="226dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="160dp"
            android:justificationMode="inter_word"
            android:scrollbars="vertical"
            android:text="@string/description"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/menuPrice"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="424dp"
            android:layout_marginEnd="300dp"
            android:layout_marginBottom="114dp"
            android:text="price"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/share"
            android:layout_marginTop="429dp"
            android:layout_marginLeft="250dp"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/share"
            android:text="Share"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/orderNow"
            android:layout_marginTop="483dp"
            android:layout_marginLeft="250dp"
            android:background="@drawable/button"
            android:text="Order Now"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/addToCart"
            android:layout_marginTop="481dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/button"
            android:text="Add to cart"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
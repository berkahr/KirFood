<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/promoFragment"
    android:orientation="vertical"
    tools:context=".ContactUs">

    <TextView
        android:id="@+id/header3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableLeft="@drawable/arrow_back"
        android:text="Contact Us"
        android:textSize="30dp"
        android:paddingTop="5dp"
        android:gravity="left"
        android:background="@drawable/top_bar_page"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="30dp"
            android:text="Get in Touch with Us!"
            android:textColor="@color/kirby_elcate_color"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:text="Feel free to drop us a line below !"
            android:textColor="@color/kirby_elcate_color"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/my_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:text="Your Name"
            android:textColor="@color/kirby_elcate_color"
            android:textSize="16sp" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="left"
            android:background="@drawable/shadow2"
            android:hint="Nama"/>

        <TextView
            android:id="@+id/my_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:text="Email"
            android:textColor="@color/kirby_elcate_color"
            android:textSize="16sp" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="left"
            android:background="@drawable/shadow2"
            android:hint="name@domail.com"/>
        <TextView
            android:id="@+id/my_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:text="Messages"
            android:textColor="@color/kirby_elcate_color"
            android:textSize="16sp" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="left"
            android:background="@drawable/shadow2"
            android:hint="Write Messages"/>

        <TextView
            android:id="@+id/send"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/shadow2"
            android:text="Send"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>




    </LinearLayout>
</LinearLayout>